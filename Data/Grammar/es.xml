<?xml version="1.0" encoding="utf-8" ?>

<grammar languaje="Spanish">
  
  <command name="pause">
    <choice>
      <element>pausar</element>
    </choice>
    <choice>
      <element>la</element>
      <element></element>
    </choice>
    <choice>
      <element>canción</element>
      <element>reproducción</element>
      <element>música</element>
      <element></element>
    </choice>
  </command>

  <command name="play">
    <choice>
      <element>reproducir</element>
    </choice>
    <choice>
      <element>la</element>
      <element></element>
    </choice>
    <choice>
      <element>canción</element>
      <element>reproducción</element>
      <element>música</element>
      <element></element>
    </choice>
  </command>

  <command name="forward">
    <choice>
      <element>siguiente</element>
      <element>siguiente canción</element>
      <element>canción siguiente</element>
    </choice>
  </command>

  <command name="rewind">
    <choice>
      <element>canción anterior</element>
    </choice>
  </command>

  <command name="gettemperature sevilla">
    <choice>
      <element>temperatura</element>
      <element>temperatura en sevilla</element>
    </choice>
  </command>

  <command name="loadallmedia">
    <choice>
      <element>poner música</element>
    </choice>
  </command>

  <command name="decreasevolume">
    <choice>
      <element>bajar volumen</element>
      <element>decrementar volumen</element>
      <element>menos volumen</element>
    </choice>
  </command>

  <command name="increasevolume">
    <choice>
      <element>subir volumen</element>
      <element>aumentar volumen</element>
      <element>más volumen</element>
    </choice>
  </command>

  <command name="minimumvolume">
    <choice>
      <element>volumen mínimo</element>
    </choice>
  </command>

  <command name="maximumvolume">
    <choice>
      <element>volumen máximo</element>
    </choice>
  </command>

  <command name="deleteallgrammar">
    <choice>
      <element>quitar toda la gramática</element>
    </choice>
  </command>

  <command name="setdirectcolor red">
    <choice>
      <element>color rojo</element>
    </choice>
  </command>

  <command name="gradientcolor white 1000">
    <choice>
      <element>encender la luz</element>
    </choice>
  </command>

  <command name="gradientcolor black 1000">
    <choice>
      <element>apagar la luz</element>
    </choice>
  </command>

  <command name="gradientcolor red 1000">
    <choice>
      <element>color rojo</element>
    </choice>
  </command>

</grammar>


